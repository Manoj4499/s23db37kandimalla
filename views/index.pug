extends layout

block content
  h1= title
  p Welcome to #{title}
  p assignment 10 pug index
  button(type="button", class="btn btn-success btn-lg" onclick ="doReduce()") Press Me
  div#reduce Count #{count} with change #{change} 
 
 
  script.
    var count = 20;
    var change = -1;
    function doReduce(){
      count = count + change;
      change--;
      document.getElementById('reduce').textContent = `Count ${count} with change ${change}`;
    }